{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "es2016",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        // "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "rootDir": ".",
        "noEmit": false,
        "paths": {},
        "noImplicitAny": false,
    },
    "include": [
        "packages/*/src/**/*",
        "packages/*/v1/**/*",
        ".eslintrc.js",
        "babel.config.js",
        "scripts/**/*",
        "src/**/*",
        "global.d.ts",
        "playground/**/*.js",
        "playground/**/*.jsx",
        "playground/**/*.ts",
        "packages/plugin-eslint/*.js",
        ".eslintrc.js"
        // "**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}